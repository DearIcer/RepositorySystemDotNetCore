<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="~/lib/layui-v2.6.3/css/layui.css" media="all">
    <link rel="stylesheet" href="~/css/public.css" media="all">
</head>

<body>
    <div class="layuimini-container">
        <div class="layuimini-main">

            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">模板名称</label>
                                <div class="layui-input-inline">
                                    <input type="text" name="account" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit
                                        lay-filter="data-search-btn">
                                    <i class="layui-icon"></i> 搜 索
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>
            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-normal layui-btn-sm data-add-btn" lay-event="add"> 添加 </button>
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 删除 </button>
                </div>
            </script>

            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

            <script type="text/html" id="currentTableBar">
                
                {{# if(d.status === 1) { }}
                    <a class="layui-btn layui-btn-normal layui-btn-xs data-count-edit" lay-event="edit">作废</a>
                {{# } else if(d.status === 2) { }}
                    
                {{# } else { }}
                   
                {{# } }}
                @* <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">不可操作</a> *@
            </script>
            
            <script type="text/html" id="StatusCell">
                {{# if(d.status === 1) { }}
                    <a class="layui-font-blue">审核中</a>
                {{# } else if(d.status === 2) { }}
                    <a class="layui-font-green">结束</a>
                {{# } else { }}
                    <a class="layui-font-red">作废</a>
                {{# } }}
            </script>

 
        </div>
    </div>
    <script src="~/lib/layui-v2.6.3/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form', 'table', 'upload', 'layer'], function () {
            var $ = layui.jquery,
                form = layui.form,
                table = layui.table,
                upload = layui.upload,
                layer = layui.layer;

            table.render({
                elem: '#currentTableId',
                url: '/Admin/WorkFlow_Instance/GetWorkFlow_Instance',
                toolbar: '#toolbarDemo',
                defaultToolbar: ['filter', 'exports', 'print', {
                    title: '提示',
                    layEvent: 'LAYTABLE_TIPS',
                    icon: 'layui-icon-tips'
                }],
                cols: [[
                    { type: "checkbox", width: 50 },
                    { field: 'id', width: 80, title: 'ID', sort: true, hide: true },
                    { field: 'modelName', minwidth: 180, title: '工作流模板' },
                    { field: 'status', minwidth: 180, title: '状态' ,templet:"#StatusCell"},
                    { field: 'description', minwidth: 180, title: '描述' },
                    { field: 'reason', minwidth: 180, title: '申请理由' },
                    { field: 'createTime', minwidth: 180, title: '添加时间' },
                    { field: 'creator', minwidth: 180, title: '添加人' },
                    { field: 'outGoodsIdName', minwidth: 180, title: '出库物资' },
                    { field: 'outNum', minwidth: 180, title: '出库数量' },
                    { title: '操作', minWidth: 150, toolbar: '#currentTableBar', align: "center" }
                ]],
                limits: [10, 15, 20, 25, 50, 100],
                limit: 15,
                page: true,
                skin: 'line'
            });

            function reloadTable(param) {
                table.reload('currentTableId', {
                    page: {
                        curr: 1
                    },
                    where: param
                }, 'data');

            }
            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {
                var result = data.field;
                var selectWhere = {
                    modelName: result.modelName,
                }
                reloadTable(selectWhere);
            });

            /**
             * toolbar监听事件
             */
            table.on('toolbar(currentTableFilter)', function (obj) {
                if (obj.event === 'add') {  // 监听添加操作
                    var index = layer.open({
                        title: '添加实例',
                        type: 2,
                        shade: 0.2,
                        maxmin: true,
                        shadeClose: true,
                        area: ['80%', '80%'],
                        content: '/Admin/WorkFlow_Instance/CreatetWorkFlow_InstanceView'
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });
                } else if (obj.event === 'delete') {  // 监听删除操作
                    var checkStatus = table.checkStatus('currentTableId'),
                        data = checkStatus.data;
                    //遍历出所有Id
                    var ids = [];
                    for (var i = 0; i < data.length; i++) {
                        var id = data[i].id;
                        ids.push(id);
                    }
                    @* console.log(ids); *@
                    $.ajax({
                        url: "/Admin/ConsumableInfo/DeletetCategories",
                        type: "Post",
                        data: {
                            ids: ids
                        },
                        success: function (res) {
                            if (res.code == 200) {
                                layer.alert(res.msg);
                                table.reload('currentTableId', {
                                    page: {
                                        curr: 1
                                    },
                                    where: {}
                                }, 'data');
                            } else {
                                layer.alert(res.msg);
                            }
                        }
                    });
                } 
            });

            //监听表格复选框选择
            table.on('checkbox(currentTableFilter)', function (obj) {
                console.log(obj);
            });

            table.on('tool(currentTableFilter)', function (obj) {
                var data = obj.data;
                if (obj.event === 'edit') {
                   layer.msg(JSON.stringify(data));
                   $.ajax({
                    url: "/Admin/WorkFlow_Instance/UpdateWorkFlow_InstanceStatus",
                        type: "Post",
                        data: {
                            id: data.id
                        },success: function (res) {
                            if(res.code == 200)
                            {
                                table.reload('currentTableId', {
                                    page: {
                                        curr: 1
                                    },
                                }, 'data');
                            }
                        }
                   });
                }                 
            });          
        });

    </script>

</body>

</html>